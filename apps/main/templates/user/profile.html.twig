{% extends 'base.html.twig' %}

{% block content %}
  <div class="row">
    <div class="col-md-6">
      <div class="border p-3">
        <div class="d-flex align-items-center">
          <div class="me-3">
            <img src="{{ user.avatarUrl }}" alt="user's avatar">
          </div>
          <div>
            <h1 class="fs-3 mb-0">
              {{ user.displayName }}
              <small class="text-muted">{{ user.email }}</small>
            </h1>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
